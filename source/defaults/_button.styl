$button ?= {
    background-color: $color-smoke,
    border-radius: $border-radius-m,
    border-width: 1px,
    color: $color-text-default,
    font-size: $font-size
    font-weight: $font-weight-semibold,
    line-height: $line-height,
    padding: .5em 1em
}

styleDefault()
    color: $button.color;
    background-color: $button.background-color;
    border-radius: $button.border-radius;
    padding: $button.padding;

styleHover()
    background-color: darken(@background-color, 8%);

styleOutlined()
    background-color: transparent;
    border: $button.border-width solid @color;
    &:hover
        background-color: @color;
        color: $color-white;

styleSized(size)
    font-size: lookup('$font-size-' + size);

styleColored(color)
    color: $color-white;
    background-color: lookup('$color-' + color);
    border: $button.border-width solid @background-color;
    &:hover
        background-color: darken(@background-color, 8%);
        border-color: @background-color;

styleOutlinedColored(color)
    color: lookup('$color-' + color);
    background-color: transparent;
    border-color: @color;
    &:hover
        background-color: @color;
        color: $color-white;
