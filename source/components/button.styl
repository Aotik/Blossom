use('./../plugins/getFilename.js')
use('./../plugins/exists.js')

filename = './../themes/default/' + getFilename() + '/style';
@import filename if exists(filename);

.button
    display: inline-block;
    position: relative;
    outline: 0;
    border: 0;
    cursor: pointer;
    font-weight: 500;
    font-size: $font-size-button;
    style();
    &:hover
        hoverStyle();
    &.outlined
        outlinedStyle(color);
    for color in ('red' 'orange' 'yellow' 'green' 'teal' 'blue' 'violet' 'purple' 'pink' 'brown' 'grey' 'black' 'primary')
        &.{color}
            coloredStyle(color);
            &.outlined
                outlinedColoredStyle(color);
