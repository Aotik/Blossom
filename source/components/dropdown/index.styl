-fn = './../themes/' + $theme + '/' + getFilename() + '/style';

@import -fn if exists(-fn);

$dropdown ?= {
    background-color: $color-white,
    border-color: $color-border,
    border-radius: $border-radius-m,
    border-width: 1px,
    box-shadow: $box-shadow-close,
    color: $color-text-body,
    line-height: $line-height,
    padding: .8rem 0,
}

$dropdown.item = {
    padding: .2em 1.4em
}

$dropdown.link = {
    color: $color-text-body,
    color--hover: $color-base
}

$dropdown.item.header = {
    color: $color-text-body,
    font-size: $font-size,
    font-weight: $font-weight-semibold
}

.dropdown
    position: relative;
    display: inline-block;
    styleDefault();

    .menu
        absolute: top 2rem left 0;
        min-width: 13rem;
        z-index: 800;
        display: none;
        background-color: $dropdown.background-color;
        border: $dropdown.border-width solid $dropdown.border-color;
        padding: $dropdown.padding;
        border-radius: $dropdown.border-radius;
        box-shadow: $dropdown.box-shadow
        li, a
            display: block;
            line-height: $dropdown.line-height;
        li
            padding: $dropdown.item.padding
            &.header
                color: $dropdown.item.header.color;
                font-size: $dropdown.item.header.font-size;
                font-weight: $dropdown.item.header.font-weight;
        a
            cursor: pointer;
            color: $dropdown.link.color;
            &:hover
                color: $dropdown.link.color--hover;

    &.open
        .menu
            display: block;

    &.floating
        .menu
            margin-top: 1rem;

    &.right
        .menu
            left: auto;
            right: 0;

    &.upward
        .menu
            top: auto;
            bottom: 2rem;
