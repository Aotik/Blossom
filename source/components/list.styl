-fn = './../themes/' + $theme + '/' + getFilename() + '/style';

@import './../defaults/_list'
@import -fn if exists(-fn);

.list
    styleDefault();
    li, .item
        styleItem();
        & > .header
            display: block;
            styleItemHeader();

    &.ordered
        counter-reset: orderedListItem;
        .list
            counter-reset: orderedListItem;
        li, .item
            list-style: none;
            &:before
                counter-increment: orderedListItem;
                content: counters(orderedListItem, ".") " ";
                margin-right: .3rem;
                styleCounter();
        ol&
            li[value], .item[value]
                &:before
                    content: attr(value);
                    margin-right: .5rem;

    &.bulleted
        padding-left: 1rem;
        li, .item
            position: relative;
            &:before
                content: '\2022';
                absolute: left auto top;
                styleBullet();

    &.divided
        max-width: 36rem;
        &.block
            max-width: none;
            width: 100%;
        li, .item
            margin: 0;
            styleDivided();
            a
                display: inline-block;
                float: right;

    &.horizontal
        li, .item
            margin: 0;
            display: inline-block;
            & + li, & + .item
                margin-left: 1.5rem
