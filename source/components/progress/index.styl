-fn = './../themes/' + $theme + '/' + getFilename() + '/style';

@import -fn if exists(-fn);

$progress ?= {
    background-color: $color-border
    border-radius: $border-radius-m
    height: 1.6rem
}

$progress.bar = {
    border-radius: $progress.border-radius
    background-color: darken($progress.background-color, 76%)
}

$progress.status = {
    color: $color-white
    font-size: $font-size-small
    font-weight: $font-weight-bold
    line-height: $progress.height
}

styleSized(size)
    if size == 'tiny'
        height: 0.26rem;
    if size == 'small'
        height: 0.8rem;
    if size == 'large'
        height: 2.8rem;
        .status
            line-height: 2.8rem;
            font-size: $font-size;

.progress
    cf();
    content: '';
    background-color: $progress.background-color;
    border-radius: $progress.border-radius;
    height: $progress.height;
    .bar
        height: 100%;
        position: relative;
        width: 0;
        background-color: $progress.bar.background-color;
        border-radius: $progress.bar.border-radius;
        .status
            absolute: right .6rem;
            display: none;
            color: $progress.status.color;
            font-size: $progress.status.font-size;
            line-height: $progress.status.line-height;
            font-weight: $progress.status.font-weight;

    &.tiny
        styleSized('tiny');

    &.small
        styleSized('small');

    &.large
        styleSized('large');

    &:not(.tiny):not(.small)
        .bar.show
            .status
                display: block;
