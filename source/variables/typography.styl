$font-family-standard = 'Inter UI', sans-serif;
$font-family-code = 'Roboto Mono', 'Consolas', 'Monaco', 'Lucida Console', monospace;

$font-size-h1 = 2.875rem;
$font-size-h2 = 2.375rem;
$font-size-h3 = 1.75rem;
$font-size-h4 = 1.325rem;
$font-size-h5 = 1.125rem;
$font-size = 16px;

$font-size-tiny = .75rem;
$font-size-small = .875rem;
$font-size-medium = $font-size-h5;
$font-size-large = $font-size-h4;

$font-weight-book = 400;
$font-weight-semibold = 500;
$font-weight-bold = 600;

$line-height = 1.5em;
