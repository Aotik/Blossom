.group
    & .button
        border-radius: 0;
        margin: 0 !important;

        &:first-of-type
            border-radius: $border-radius-m 0 0 $border-radius-m;

        &:last-of-type
            border-radius: 0 $border-radius-m $border-radius-m 0;

        & + .button
            border-left: 1px solid rgba(0, 0, 0, .1);
