@import 'jeet'
@import 'nib'
@import 'rupture'
@import 'light/variables'

#app
	width 100%
	min-height 100%
	height 100%
	& > div
		width 100%
		height 100%

.main-content
	padding-top 130px
	position relative
	min-height 100%
	width 100%
	.page
		font-size 1em
		span(1/1)
		padding-bottom 110px

.block-grey
	width 100%
	height 3em
	background-color color-smoke
	border-radius 4px

.show-grid > [class^='clm-']
	padding-top 15px

.show-tables > .table
	margin 20px 0

.show-input > .input
	margin 10px 0

.show-cards
	margin 12px 0
	& > .card:not(.fluid)
		margin-right 20px

.show-lists > .list
	margin 20px 0 0 0

.show-progress > .progress
	margin 6px 0

.y-block
	background-color #FFC82C
	width 100px
	height 100px
	border-radius 3px
	display block
	content ''

.example
	& + .example
		margin-top 40px
		padding-top 40px
		border-top 1px solid border-gray
	.group
		border 1px solid border-gray
		span(1/1)
		border-radius border-radius-normal
	.animation
		display inline-block
		padding 1.4em 1.4em 3.45em 1.4em
		position relative
		overflow hidden
		span(1/3)
		& + .animation
			border-left 1px solid border-gray
		&:nth-child(4n)
			border-left 0
			border-top 1px solid border-gray
		&:nth-child(5n)
			border-top 1px solid border-gray
		&:nth-child(6n)
			border-top 1px solid border-gray
		code
			absolute bottom left
			width 100%
			display block
			padding .7em 0
			text-align center
			margin 0
			color text-lighter-grey
			background-color light-color-smoke
			font-size .875em
			border-radius 0
	.circle
		border-radius 50%
		height 4em
		width 4em
		background-color color-violet
		content ''
		display block
		margin 0 auto
		&:hover
			transform scale(1.2)
	.square
		border-radius 5px
		height 4em
		width 4em
		background-color color-yellow
		content ''
		display block
		margin 0 auto
	&.typeface
		.module
			padding 1.6em 1.8em
			p
				letter-spacing .3em
				font-size 1.1em
				& + p
					margin-top 1.3em
	&.alignment
		.module
			padding 1.6em 1.8em
			p
				font-size 1.1em
				& + p
					margin-top 1.3em
	&.stages
		margin-top 20px
	&.images > [class^='image-']
		& + span
			margin-left 9px
	&.labels
		.label + .label
			margin-left 8px
	&.loaders
		.module
			img + img
				margin-top 2em
			.hold
				align(both)
	.cards
		.card
			margin-top 12px
		& > .card:not(.fluid)
			margin-right 20px
	.explanation
		margin-bottom 15px
		h6
			font-size 1.1em
		p
			color text-lighter-grey
			margin 6px 0 0 0
			display block
			line-height 1.3em

	&.buttons
		.button
			margin-top 10px
			margin-right .6em

.schemes
	display inline-flex
	flex-direction row
	align-items flex-start
	&.dark
		.scheme
			color text-grey
	& + .schemes
		margin-top 20px
	.scheme
		justify-content flex-start
		padding 1em
		display flex
		flex 1 0 auto
		content ''
		color #fff
		flex-wrap wrap
		vertical-align center
		position relative
		align-items stretch
		width 180px
		p
			display block
			span(1/1)
		span
			opacity .7
			margin 4px 0 0 0
			text-transform uppercase
		&:first-child
			border-radius border-radius-normal 0 0 border-radius-normal
		&:last-child
			border-radius 0 border-radius-normal border-radius-normal 0

.sidebar.top, .subbar
	background-color dark-color-ash
	padding 17px 0
	z-index 2100
	.logo, .sub
		float left
		display inline-block
		vertical-align top
		img
			max-height 13px
			absolute top 1px
		p
			color #fff
			margin 0
	.links
		float right
		display inline-block
		vertical-align top
		& > *
			display inline-block
			vertical-align top
		li
			& + li
				margin-left 23px
			a
				color #fff
				opacity 0.4
				cursor pointer
				&:hover
					opacity 0.6
			&.active
				a
					opacity 1

.subbar
	top 49px
	background-color color-ash
	padding 13px 0
	color #fff
	width 100%
	z-index 1900
	.sub
		font-size .9em

	.link
		font-size .9em
		margin 0
		padding 0
		line-height 1em
		float right
		a
			color #fff
			opacity .6
			&:hover
				opacity 1
			i
				margin-right 4px

aside.sidebar
	width 30%
	max-width 170px
	absolute left 1em
	float right
	h6
		margin 0 0 .5em 0
	li
		padding .4em 0
		display block
		&.active
			a
				color color-primary
				opacity 1
		a
			color text-grey
			opacity .6

.sidebar
	& + .page
		padding-left 210px
		+below('m')
			padding-left 0

.outer-title
	span(1/1)
	border-bottom 1px solid border-gray
	padding-bottom 28px
	margin-bottom 40px
	h4
		font-weight 400
	p
		color text-lighter-grey
		margin-top 11px

.footer
	margin-top 30px
	span(1/1)
	absolute bottom 10px left
	.madeby a
		&:hover
			color dark-color-grey
	.aotik
		position relative
		display inline-block
		&:after
			content ''
			border-bottom 1px dashed color-grey
			display block
	& .inner
		padding 1em 0
		border-top 1px solid border-gray
		.links
			li a
				font-size .875em
