.breakpoint-
	&xs-hide
		+below('xs')
			display none
	&s-hide
		+below('s')
			display none
	&m-hide
		+below('m')
			display none
	&l-hide
		+below('l')
			display none
	&xl-hide
		+below('xl')
			display none
	&hd-hide
		+below('hd')
			display none
	&xs-show
		+above('xs')
			display block
	&s-show
		+above('s')
			display block
	&m-show
		+above('m')
			display block
	&l-show
		+above('l')
			display block
	&xl-show
		+above('xl')
			display block
	&hd-show
		+above('hd')
			display block
