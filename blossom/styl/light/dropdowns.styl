.dropdown
	position relative
	display inline-block
	&.open
		.menu
			display block
	.toggle
		color color-primary
	.menu
		background-color #fff
		absolute top 25px left 0
		border 1px solid background-light-gray
		border-radius border-radius-normal
		min-width 180px
		z-index 2000
		display none
		box-shadow 0 2px 3px 0 rgba(34,36,38,.15)
	li
		font-size 1em
		display block
		&.divider
			margin .4em 0
		&.header
			text-transform uppercase
			color text-grey
			padding 1.1em 1.2em 0.5em 1.2em
			font-size 0.8em
			font-weight 900

		&:first-child
			a
				border-radius border-radius-normal border-radius-normal 0 0
		&:last-child
			a
				border-radius 0 0 border-radius-normal border-radius-normal

		&:hover
			a
				background-color background-lightest-gray
		a
			color text-grey
			display block
			padding 0.6em 1.06em
	&.right
		.menu
			left auto
			right 0
	.sub
		left 180px
