.table
	width 100%
	border-radius border-radius-normal
	border 1px solid background-light-gray
	border-collapse separate
	&.stripes
		tr:nth-child(2n)
			background-color lighten(background-lightest-gray, 50%)
	&.simple
		th
			background-color transparent
	&.basic
		border 0
		th
			background-color transparent
	&.cells
		th
			border-left 1px solid background-light-gray
			&:first-child
				border-left 0
		tr
			td
				border-left 1px solid background-light-gray
				&:first-child
					border-left 0
	th
		padding 1em
		background-color background-lightest-gray
		font-weight 600
		border-bottom 1px solid background-light-gray
	tr
		td
			padding 0.8em 1em
			border-bottom 1px solid background-light-gray
			line-height 1.375em
		&:last-child
			td
				border-bottom 0
